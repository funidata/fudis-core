{
  "name": "@funidata/fudis-core",
  "version": "1.0.2",
  "description": "Core styles and foundations for Fudis Design System",
  "files": [
    "src",
    "./_foundations.scss",
    "./styles.css"
  ],
  "scripts": {
    "start": "npm run build:dist && storybook dev -p 6007",
    "build:storybook": "npm run build:dist && storybook build",
    "build:dist": "scripts/copy-files.sh",
    "build:css": "sass _styles.scss dist/styles.css --style=compressed",
    "build:dist:watch": "nodemon --watch src --watch _index.scss --ext scss --exec \"npm run build:dist\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funidata/fudis-core.git"
  },
  "keywords": [
    "funidata",
    "design-system",
    "core-styles",
    "foundations"
  ],
